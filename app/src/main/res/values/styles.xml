<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.TextView.Price">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="AppTheme.TextView.Name">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextView.HotelCount">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

</resources>
